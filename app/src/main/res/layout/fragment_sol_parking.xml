<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/blue">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/title_label_matr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/licensePlate"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="30dp"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/title_input_matr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/title_label_marc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/brand_model"
        app:layout_constraintTop_toBottomOf="@+id/title_label_matr"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="30dp"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/title_input_marc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/title_label_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/color"
        app:layout_constraintTop_toBottomOf="@+id/title_label_marc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="30dp"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/title_input_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"/>
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/filledButton_solicitar_Parking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/send"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_label_color"
        android:backgroundTint="@color/black"
        android:textColor="@color/white"
        android:layout_margin="100dp"
        />





</androidx.constraintlayout.widget.ConstraintLayout>
